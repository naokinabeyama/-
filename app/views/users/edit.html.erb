<div class="body">
<%= notice %>
<% if @user.errors.any? %>
    <p class="error">error</p>
 <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
 </ul>
<% end %>

<h1>User info</h1>
<%= form_for(@user) do |f| %>
<label>Name</label>
<%= f.text_field :name %>
<label>Image</label>
<%= f.attachment_field :profile_image %>
<label>Introduction</label>
<%= f.text_area :introduction %>
<%= f.submit 'Update User' %>
<% end %>
</div>