<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
	<p class="error">error</p>
 <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
 </ul>
<% end %>

<div class="field">
	<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>

<div class="field">
	<div class="book_body">Body</div>
<%= f.text_area :body %>
</div>

<div class="actions">
<%= f.submit 'Update Book' %>
</div>

<%= link_to 'Show', book_path(@book) %>
|
<%= link_to 'Back', books_path %>
<% end %>
</form>