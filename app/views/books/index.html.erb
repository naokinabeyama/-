<h1 class="headline">Books</h1>
<table>
	<thed>
        <tr>
	        <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thed>
    <tbody>
        <% @books.each do |book| %>
    	<tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'Show', book_path(book.id) %></td>
            <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
            <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
    <p class="error">error</p>
 <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
 </ul>
<% end %>


<div class="field">
	<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>

<div class="field">
	<label for="book_body">Body</label>
<%= f.text_area :body %>
</div>

<div calss="actions">
	<%= f.submit 'Create Book' %>
</div>
<% end %>




